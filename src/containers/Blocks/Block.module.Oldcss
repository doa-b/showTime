.Wrapper {
    margin: 5px;
    width: 100%;
}

.Block {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    width: 100%;
    background: blue;
    border: 1px solid #ccc;
    box-shadow: 3px 3px 3px #ccc;
    color: white;
    padding: 5px;
}

.BlockMobile {
    background: blue;
    border: 1px solid #ccc;
    box-shadow: 3px 3px 3px #ccc;
    color: white;
    padding: 5px;
}

.BlockFirst {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    width: 100%;
}

.Spacer {
    margin-left: 1%;
}

.Below {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    width: 100%;
}

.BelowMobile {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.Arrow {
    position: absolute;
    right: 0;
}

.Controls {
    cursor: pointer;
    margin-left: auto;
}

.Title {
    cursor: pointer;
    font-weight: bold;
}

.TitleMobile {
    width: 100%;
    cursor: pointer;
    font-weight: bold;
}